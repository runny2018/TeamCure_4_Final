<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/layout_round_bg"
    android:layout_margin="10dp"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_android_black_24dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/post_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atif Hossain"
        android:textColor="#000000"
        android:layout_marginLeft="48dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/feeling_of_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_user_name"
        android:layout_toRightOf="@id/profile_image"
        android:text="Feeling Great"
        android:layout_marginLeft="18dp"
        />

    <ImageView
        android:id="@+id/postImage"
        android:layout_marginTop="10dp"
        android:layout_below="@id/feeling_of_user"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_marginTop="14dp"
        android:id="@+id/postContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postImage"
        android:text="Post ka Content"
        android:textSize="21sp"
        android:textColor="#000000"
        />

    <Button
        android:layout_marginTop="24dp"
        android:id="@+id/provide_support_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provide Support"
        android:layout_below="@id/postContent"
        android:background="@android:color/transparent"
        android:textColor="#1661BF"
        />

</RelativeLayout>